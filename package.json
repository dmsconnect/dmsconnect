{
  "name": "@dmsconnect/workspace",
  "private": true,
  "scripts": {
    "preinstall": "GITHUB_TOKEN=$GITHUB_TOKEN yarn workspace @dmsconnect/scripts run create:npmrc $(pwd) && ls -a",
    "publish:ci": "yarn workspace @dmsconnect/scripts run publish:ci $(pwd)",
    "sync:env": "DOPPLER_TOKEN=$DOPPLER_TOKEN VERCEL_TOKEN=$VERCEL_TOKEN yarn workspace @dmsconnect/scripts run sync:env $(pwd)",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@dmsconnect/scripts": "^0.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
